<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.pomit.springwork.netty.Dao.UserDao">
    <resultMap id="queryUser" type="cn.pomit.springwork.netty.entity.User">
        <!-- property对应实体类中的属性名  column 对应库表中的字段名 -->
        <id column="uid" property="uid"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <!-- 复合对象 -->
        <!-- property对应实体类中的属性名  column 对应库表中的字段名 -->
        <association property="mid" column="mid" javaType="cn.pomit.springwork.netty.entity.Ditu">
            <id column="mid" property="mid"/>
            <result column="mname" property="mname"/>
        </association>
    </resultMap>
    <select id="queryuser" resultMap="queryUser">
   SELECT
	u.username,
	m.mname,
	m.neighbor
FROM
	tb_user u,
	tb_map m
WHERE
	u.mid = m.mid;

    </select>
    <insert id="addUser">
    insert into tb_user(username, password) values(#{username},#{password})
    </insert>
    <select id="getUserById" resultType="cn.pomit.springwork.netty.entity.User">
        select uid,username,password from tb_user where uid=#{uid}
    </select>
</mapper>